@model List<Pedido>

<br/>
@if(@Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <table class="table table-hover">
        @foreach (var ped in Model)
        {
            <tr>
                <td>@ped.Pedidos_id</td>
                <td>@ped.Data</td>
                <td>@ped.Valor</td>
                <td>@ped.Desconto</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="/pedido/delete/@ped.Pedidos_id">Apagar</a>
                    <a class="btn btn-sm btn-warning" href="/pedido/update">Editar</a>
                </td>

            </tr>
        }
    </table>
}
<a class="btn btn-primary" href="/produto/create">Adicionar</a>