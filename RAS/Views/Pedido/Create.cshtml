@model Pedido

<form asp-controller="Pedido" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Data"></label>
        <input asp-for="Data" class="form-control" />
        <span asp-validation-for="Data"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>

    <div class="form-group">
        <label asp-for="Desconto"></label>
        <input asp-for="Desconto" class="form-control" />
        <span asp-validation-for="Desconto"></span>
    </div>
    <button class="btn btn-primary">Salvar</button>
</form>