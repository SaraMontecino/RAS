@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http
@using System.Text.Json

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] RAS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    @{
        string json = HttpContextAccessor.HttpContext.Session.GetString("user");

        if (json != null)
        {
            Colaborador user = JsonSerializer.Deserialize<Colaborador>(json);

            if (user != null)
            {
                <header>
                    <nav style="background-color: lightblue; height: 80px;"
                class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                        <div class="container">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RAS</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Colaborador"
                                    asp-action="Index">Colaborador</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Consumidor"
                                    asp-action="Index">Consumidor</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Produto"
                                    asp-action="Index">Produto</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Pedido"
                                    asp-action="Index">Pedido</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Produto_Pedido"
                                    asp-action="Index">Produto_Pedido</a>
                                    </li>

                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" style="position: absolute; right: 30px;"
                                        asp-controller="Carrinho" asp-action="Index">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                            class="bi bi-cart" viewBox="0 0 16 16">
                                                    <path
                                                d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                                </svg>
                                            </a>
                                        </li>

                                    </ul>
                                    <div style="display: flex; flex-direction: column; margin-left: 150px;">
                                        @if (string.Equals(user.Sexo, "F"))
                                        {
                                            <span style="align-self: center;">Bem-vinda<br></span>
                                        }
                                        else
                                        {
                                            <span style="align-self: center;">Bem-vindo<br></span>
                                        }
                                        <b style="align-self: center;">@user.Nome</b>
                                    </div>

                                    <form style="align-self: flex-end;" asp-controller="Colaborador" asp-action="Logout"
                                method="post">
                                        <button class="leave-button"
                                    style="color: red; align-self: flex-end; margin-left: 10px; background-color: transparent; border-width: 0px;">sair</button>
                                    </form>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </header>
            }
        }
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - RAS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
