@model List<Colaborador>

<br/>
@if(@Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <table class="table table-hover">
        @foreach (var c in Model)
        {
    
            <tr>
                <td>@c.Pessoas_id</td>
                <td>@c.Nome</td>
                <td>@c.Cpf</td>
                <td>@c.DataNascimento</td>
                <td>@c.Email</td>
                <td>@c.Sexo</td>
                <td>@c.Telefone</td>
                <td>@c.Remuneracao</td>
                <td>@c.Comissao</td>
                <td>@c.Login</td>
                <td>@c.Senha</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="/colaborador/delete/@c.Pessoas_id">Apagar</a>
                    <a class="btn btn-sm btn-warning" href="/colaborador/update">Editar</a>
                </td>

            </tr>
        }
    </table>
}
<a class="btn btn-primary" href="/colaborador/create">Adicionar</a>