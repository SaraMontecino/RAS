@model List<Produto>

<br/>
@if(@Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <table class="table table-hover">
        @foreach (var p in Model)
        { 
            <tr>
                <td>@p.Produtos_id</td>
                <td>@p.Tipo</td>
                <td>@p.Descricao</td>
                <td>@p.Estoque</td>
                <td>@p.Valor</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="/produto/delete/@p.Produtos_id">Apagar</a>
                    <a class="btn btn-sm btn-warning" href="/produto/update/@p.Produtos_id">Editar</a>
                </td>

            </tr>
        }
    </table>
}
<a class="btn btn-primary" href="/produto/create">Adicionar</a>