@model Produto

<br/>
@if(@Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <h3>@ViewBag.Mensagem</h3>
    <table class="table table-hover">
        <tr>
            <td>@Model.Produtos_id</td>
            <td>@Model.Tipo</td>
            <td>@Model.Descricao</td>
            <td>@Model.Estoque</td>
            <td>@Model.Valor</td>
            <td>
                <a class="btn btn-sm btn-danger" href="/produto/delete/@Model.Produtos_id">Apagar</a>
                <a class="btn btn-sm btn-warning" href="/produto/update">Editar</a>
            </td>

        </tr>
    </table>
}
<a class="btn btn-primary" href="/produto/create">Adicionar</a>