@model Produto_Pedido

<form asp-controller="Produto_Pedido" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Qtd"></label>
        <input asp-for="Qtd" class="form-control" />
        <span asp-validation-for="Qtd"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>
    <button class="btn btn-primary">Salvar</button>
</form>