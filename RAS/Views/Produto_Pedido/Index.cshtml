@model Produto_Pedido

<br/>
@if(@Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <h3>@ViewBag.Mensagem</h3>
    <table class="table table-hover">
        <tr>
            <td>@Model.Qtd</td>
            <td>@Model.Valor</td>
            <td>
                <a class="btn btn-sm btn-danger" href="/Produto_Pedido/delete/@Model.produto_pedido">Apagar</a>
                <a class="btn btn-sm btn-warning" href="/Produto_Pedido/update">Editar</a>
            </td>

        </tr>
    </table>
}
<a class="btn btn-primary" href="/Produto_Pedido/create">Adicionar</a>